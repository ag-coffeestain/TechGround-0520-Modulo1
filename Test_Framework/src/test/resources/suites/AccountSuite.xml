<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Account related Suite">
    <test name="Login Functionality - Chrome">
        <parameter name="email" value="hola@hola.com"></parameter>
        <parameter name="password" value="hola"></parameter>
        <groups>
            <run>
                <include name="successful"></include>
            </run>
        </groups>
        <classes>
            <class name="AccountTests"></class>
        </classes>
    </test>

    <test name="Login Functionality - Firefox">
        <parameter name="email" value="holasx@failure.com"></parameter>
        <parameter name="password" value="hola"></parameter>
        <parameter name="browser" value="firefox"></parameter>
        <groups>
            <run>
                <include name="failure"></include>
            </run>
        </groups>
        <classes>
            <class name="AccountTests"></class>
        </classes>
    </test>

</suite>