<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Account related Suite">
    <parameter name="browser" value="firefox"></parameter>
    <test name="Login Functionality - Firefox">
        <parameter name="email" value="hola@hola.com"></parameter>
        <parameter name="password" value="hola"></parameter>
        <classes>
            <class name="selenium.AccountTests">
                <methods>
                    <include name="Test_Login_Successful"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>